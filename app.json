{
  "expo": {
    "name": "Cryptify",
    "slug": "Cryptify",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow Cryptify to use Face ID for authentication",
          "fingerprintPermission": "Allow Cryptify to use Fingerprint for authentication",
          "biometricPermission": "Allow Cryptify to use Biometrics for authentication"
        }
      ]
    ]
  }
}
